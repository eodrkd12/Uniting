<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view30"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/colorMdGrey_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개글 작성"
        android:textColor="@color/colorMdGrey_900"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_introduce"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizePresetSizes="true"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="left"
        android:hint="당신에 대해 이야기 해주세요. (10자 이상)\n매력적인 소개글은 친구들에게 매칭률이 올라갑니다.\n\n카카오톡 아이디 또는 메신저 등 개인 연락처를\n노출할 경우에는 소개글이 비노출 됩니다."
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLines="10"
        android:minLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_introduce_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view30" />

    <Button
        android:id="@+id/btn_introduce_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="완료"
        android:background="@color/colorPrimary"
        android:textSize="20dp"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/colorMdWhite_1000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_introduce_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/view30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_back_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>
