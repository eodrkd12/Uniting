<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.MatchingFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_matchingtype"
        android:layout_width="295dp"
        android:layout_height="277dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_condition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_matchingtype">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:text="매칭조건"
            android:textColor="@color/colorMdGrey_900"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_personality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"
            android:editable="false"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_personality"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_age" />

        <TextView
            android:id="@+id/text_age"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="나이"
            android:textAlignment="center"
            android:textColor="@color/colorMdGrey_700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/text_department"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="학과"
            android:textAlignment="center"
            android:textColor="@color/colorMdGrey_700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/text_age"
            app:layout_constraintTop_toBottomOf="@+id/text_age" />

        <TextView
            android:id="@+id/text_hobby"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="취미"
            android:textAlignment="center"
            android:textColor="@color/colorMdGrey_700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/text_department"
            app:layout_constraintTop_toBottomOf="@+id/text_department" />

        <TextView
            android:id="@+id/text_personality"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="성격"
            android:textAlignment="center"
            android:textColor="@color/colorMdGrey_700"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/text_hobby"
            app:layout_constraintTop_toBottomOf="@+id/text_hobby" />

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"
            android:editable="false"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_age" />

        <EditText
            android:id="@+id/edit_department"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"
            android:editable="false"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_department"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_age" />

        <EditText
            android:id="@+id/edit_hobby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="50dp"
            android:editable="false"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_hobby"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_age" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_matching"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/main_connect_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_condition" />
</androidx.constraintlayout.widget.ConstraintLayout>