<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_review"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_imageview"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_review_point" />

    <TextView
        android:id="@+id/text_review_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/colorMdGrey_900"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_review_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="★"
        android:textSize="10dp"
        android:textColor="@color/colorMdOrange_400"
        app:layout_constraintStart_toStartOf="@+id/text_review_nickname"
        app:layout_constraintTop_toBottomOf="@+id/text_review_nickname" />

    <TextView
        android:id="@+id/text_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="날짜"
        android:textSize="10dp"
        android:textColor="@color/colorMdGrey_500"
        app:layout_constraintBottom_toBottomOf="@+id/text_review_point"
        app:layout_constraintStart_toEndOf="@+id/text_review_point"
        app:layout_constraintTop_toTopOf="@+id/text_review_point" />

    <TextView
        android:id="@+id/text_review_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="리뷰내용"
        android:textColor="@color/colorMdGrey_900"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_review"
        app:layout_constraintStart_toStartOf="@+id/image_review"
        app:layout_constraintTop_toBottomOf="@+id/image_review" />
</androidx.constraintlayout.widget.ConstraintLayout>
